{
  "required": [
    {
      "name": "DOCKER_USERNAME",
      "description": "Docker Hub username",
      "type": "string",
      "required": true,
      "example": "myusername"
    },
    {
      "name": "DOCKER_PASSWORD",
      "description": "Docker Hub password or access token",
      "type": "string",
      "required": true,
      "sensitive": true
    },
    {
      "name": "HF_TOKEN",
      "description": "HuggingFace API token",
      "type": "string",
      "required": true,
      "format": "hf_xxxxxxxxxxxxx"
    },
    {
      "name": "HF_SPACE_NAME",
      "description": "HuggingFace Space name (username/space-name)",
      "type": "string",
      "required": true,
      "example": "Really-amin/Datasourceforcryptocurrency"
    }
  ],
  "optional": [
    {
      "name": "SLACK_WEBHOOK",
      "description": "Slack webhook URL for notifications",
      "type": "string",
      "required": false,
      "format": "https://hooks.slack.com/services/..."
    },
    {
      "name": "CODECOV_TOKEN",
      "description": "Codecov token for coverage reports",
      "type": "string",
      "required": false
    },
    {
      "name": "SNYK_TOKEN",
      "description": "Snyk token for security scanning",
      "type": "string",
      "required": false
    },
    {
      "name": "AWS_ACCESS_KEY",
      "description": "AWS access key for S3 backups",
      "type": "string",
      "required": false
    },
    {
      "name": "AWS_SECRET_KEY",
      "description": "AWS secret key for S3 backups",
      "type": "string",
      "required": false,
      "sensitive": true
    }
  ],
  "setupInstructions": {
    "steps": [
      "Go to GitHub Repository Settings",
      "Navigate to 'Secrets and variables' â†’ 'Actions'",
      "Click 'New repository secret'",
      "Add each secret with its value",
      "Never commit secrets to repository"
    ],
    "url": "https://github.com/USERNAME/REPO/settings/secrets/actions"
  }
}

